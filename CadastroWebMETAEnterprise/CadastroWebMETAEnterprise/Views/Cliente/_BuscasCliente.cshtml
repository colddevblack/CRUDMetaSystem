@model List<CadastroWebMETAEnterprise.Models.ClienteModel>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>Cliente ID</th>
                <th>Nome Cliente </th>
                <th>Numero telefone </th>
                <th>Data de Nascimento </th>
                <th>menu apagar</th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.nomeCliente</td>
                    <td>@user.telefone</td>
                    <td>@user.endereco</td>

                    <td>@Html.ActionLink("DeletarCliente", "DeletarCliente", new { id = user.id }, new { @class = "btn btn-danger btn-sm" })</td>

                </tr>
            }
        </table>

    </div>
</div>


