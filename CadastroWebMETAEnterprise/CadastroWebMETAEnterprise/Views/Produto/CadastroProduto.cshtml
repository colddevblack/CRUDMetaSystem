@model CadastroWebMETAEnterprise.Models.ProdutoModel
@{
    ViewBag.Title = "Cadastro Produtos";
}




<h2>Cadastro de Produtos</h2>

<h2>Novo Cadastro de Produtos</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Produtos</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("CadastroProduto", "Produto"))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.LabelFor(obj => obj.nomeProduto)
                                @Html.TextBoxFor(obj => obj.nomeProduto, new { @class = "form-control" })
                            </div>

                          


                        </div>



                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(obj => obj.preco)
                                @Html.TextBoxFor(obj => obj.preco, new { @class = "form-control" })
                            </div>
                          
                        </div>



                        <div>
                            <input type="submit" value="Salvar" class="btn btn-warning" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
