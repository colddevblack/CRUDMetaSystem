@model CadastroWebMETAEnterprise.Models.OrcamentoModel
@{
    ViewBag.Title = "Cadastro Transacao";
}


<h2>Novo Cadastro de Orçamentos</h2>





<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Cadastrar Valor Orçamento</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("CadastroOrcamento", "Orcamento"))
                    {


                        <div class="form-group">
                            <label for='clienteid' class="control-label">Nome do Cliente</label>
                            @Html.DropDownList("clienteid", null, "Selecione o Cliente", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for='produto' class="control-label">Nome do Produto</label>
                            @Html.DropDownList("produtoid", null, "Selecione o Produto", new { @class = "form-control" })
                        </div>

                       


                        <div class="form-group">
                            @Html.LabelFor(obj => obj.valor)
                            @Html.TextBoxFor(obj => obj.valor, new { @class = "form-control" })

                        </div>




                        <div>
                            <input type="submit" value="Salvar" class="btn btn-warning btn-lg" />

                        </div>
                        
                    }

                </div>
            </div>
        </div>
    </div>
</div>


