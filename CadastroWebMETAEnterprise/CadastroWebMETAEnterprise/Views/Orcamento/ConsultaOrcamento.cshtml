@model List<CadastroWebMETAEnterprise.Models.OrcamentoModel>


<h2>Consulta Orçamento</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Orçamento</h5>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <tr>
                            <td>Orçamento ID</td>
                            <td>valor </td>
                            <td>Cliente</td>
                            <td>Produto</td>
                            <td>Criação</td>
                            <td>menu editar</td>
                            <td>menu apagar</td>
                        </tr>
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.valor</td>
                                <td>@item.clientemodel.nomeCliente</td>
                                <td>@item.produtomodel.nomeProduto</td>
                                <td>@item.dataCriacaoOrcamento</td>
                                <td>@Html.ActionLink("Editar Orcamento", "EditarOrcamento", "Orcamento", new { id = item.id }, new { @class = "btn btn-warning btn-sm" })</td>
                                <td>@Html.ActionLink("Deletar Orcamento", "DeletarOrcamento", "Orcamento", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>